= paginate(stats, remote: true)
table.table.table-striped.index
  tr
    th
      = t('activerecord.models.manifestation')
    th
      = t('activerecord.attributes.checkout_stat_has_manifestation.checkouts_count')
  - stats.count(:id).each do |stat|
    |  <tr class="line
    = cycle("0", "1")
    | "> 
    td
      - manifestation = Manifestation.where(id: stat[0]).first
      = render 'manifestations/show_index', manifestation: manifestation if manifestation
    td
      = stat[1]
    - - end
= paginate(stats, remote: true)
