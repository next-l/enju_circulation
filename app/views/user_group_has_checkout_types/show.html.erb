    <div class="card card-body">
      <ul>
        <% if policy(@user_group_has_checkout_type).update? %>
          <li><%= link_to t('page.edit'), edit_user_group_has_checkout_type_path(@user_group_has_checkout_type) -%></li>
        <% end %>
        <li><%= back_to_index(flash[:page_info]) -%></li>
      </ul>
    </div>
  </div>
</div>
